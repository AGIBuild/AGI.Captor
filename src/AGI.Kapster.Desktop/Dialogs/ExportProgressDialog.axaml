<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AGI.Kapster.Desktop.Dialogs.ExportProgressDialog"
        Title="Export Progress"
        Width="400"
        Height="200"
        CanResize="false"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30"
        Foreground="White"
        Topmost="True">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Grid.Row="0" 
               x:Name="TitleText"
               Text="Exporting Screenshot..." 
               FontSize="16" 
               FontWeight="SemiBold" 
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

    <!-- Progress Section -->
    <StackPanel Grid.Row="1" Spacing="10">
      <!-- Status Text -->
      <TextBlock x:Name="StatusText" 
                 Text="Preparing export..." 
                 FontSize="12"
                 HorizontalAlignment="Center"
                 Foreground="#CCCCCC"/>
      
      <!-- Progress Bar -->
      <ProgressBar x:Name="ProgressBar"
                   Height="8"
                   Background="#404040"
                   Foreground="#0078D4"
                   Minimum="0"
                   Maximum="100"
                   Value="0"/>
      
      <!-- File Info -->
      <TextBlock x:Name="FileInfoText" 
                 Text="" 
                 FontSize="10"
                 HorizontalAlignment="Center"
                 Foreground="#999999"
                 TextWrapping="Wrap"/>
    </StackPanel>

    <!-- Success/Error Message -->
    <Border x:Name="ResultPanel"
            Grid.Row="2"
            Background="#404040"
            Padding="10"
            CornerRadius="5"
            Margin="0,10,0,0"
            IsVisible="False">
      <StackPanel>
        <TextBlock x:Name="ResultTitle" 
                   FontWeight="SemiBold" 
                   FontSize="12"/>
        <TextBlock x:Name="ResultMessage" 
                   FontSize="11"
                   Foreground="#CCCCCC"
                   TextWrapping="Wrap"
                   Margin="0,5,0,0"/>
      </StackPanel>
    </Border>

    <!-- Buttons -->
    <StackPanel Grid.Row="3" 
                x:Name="ButtonPanel"
                Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Spacing="10" 
                Margin="0,15,0,0"
                IsVisible="False">
      <Button x:Name="OpenFolderButton"
              Content="Open Folder"
              Padding="15,8"
              Background="#0078D4"
              Foreground="White"
              BorderThickness="0"
              CornerRadius="3"/>
      <Button x:Name="CloseButton"
              Content="Close"
              Padding="15,8"
              Background="Transparent"
              Foreground="White"
              BorderBrush="#555555"
              BorderThickness="1"
              CornerRadius="3"/>
    </StackPanel>

  </Grid>
</Window>
