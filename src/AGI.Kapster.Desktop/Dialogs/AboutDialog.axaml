<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AGI.Kapster.Desktop.Dialogs.AboutDialog"
        Title="About AGI Kapster"
        Width="400"
        Height="300"
        MinWidth="400"
        MinHeight="300"
        MaxWidth="400"
        MaxHeight="300"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Icon="avares://AGI.Kapster.Desktop/logo.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Application Icon and Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Source="avares://AGI.Kapster.Desktop/logo.ico" Width="48" Height="48" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="AGI Kapster" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Description -->
        <TextBlock Grid.Row="1" 
                   Text="A powerful cross-platform screenshot and annotation tool"
                   FontSize="14"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Features -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Features:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="• Screenshot capture with selection" FontSize="12" Margin="10,2"/>
            <TextBlock Text="• Annotation tools (arrows, rectangles, text, emoji)" FontSize="12" Margin="10,2"/>
            <TextBlock Text="• Multiple export formats (PNG, JPEG, BMP, WebP)" FontSize="12" Margin="10,2"/>
            <TextBlock Text="• Global hotkey support" FontSize="12" Margin="10,2"/>
            <TextBlock Text="• Cross-platform (Windows, macOS)" FontSize="12" Margin="10,2"/>
        </StackPanel>
        
        <!-- Copyright and Links -->
        <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
            <TextBlock Text="Built with Avalonia UI and .NET 9" 
                       FontSize="12" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="© 2025 AGI Kapster" 
                       FontSize="12" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Close Button -->
        <Button Grid.Row="4" 
                x:Name="CloseButton"
                Content="Close" 
                Width="80" 
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                IsDefault="True"/>
    </Grid>
</Window>
